<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/baloo_bhai"
        android:text="booking Completed"
        android:textAllCaps="true"
        android:textColor="@color/orange"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/logo_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/heading"
        android:layout_marginTop="20dp"
        android:src="@drawable/booking_completed"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/amount"
        android:layout_below="@+id/logo_image"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="@color/blue"
        android:textSize="30sp"
        android:layout_height="wrap_content"
        android:text="Amount"/>
    <TextView
        android:id="@+id/pin_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PickUp Pin"
        android:textColor="@color/orange"
        android:fontFamily="@font/baloo_bhai"
        android:textSize="20sp"
        android:layout_below="@id/amount"
        android:layout_centerHorizontal="true"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pin_heading"
        android:layout_centerHorizontal="true"
        android:background="@drawable/box_orange"
        android:padding="10dp"
        >
        <TextView
            android:id="@+id/pickup_pin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PickUp Pin"
            android:textColor="@color/blue"
            android:fontFamily="@font/baloo_bhai"

            android:textSize="20sp"
            />


    </LinearLayout>

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Give This pin At cycle pickUp Time"
       android:layout_below="@+id/pin_heading"
       android:layout_marginTop="90dp"
       android:layout_centerHorizontal="true"
       android:textColor="@color/black"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*Dont disclose this pin to anyone.Handover your ID At PickUp Zone.Extra charges will be applied if pickup zone and drop zone are different."
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_alignParentBottom="true"
        android:layout_margin="9dp"/>
</RelativeLayout>