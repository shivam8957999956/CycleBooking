<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AllDetails.AllDetails">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/top_header"
        android:elevation="5dp"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All Detail About Booking"
            android:textColor="@color/white"
            android:fontFamily="@font/cairo_semibold"
            android:textSize="20sp" />

    </LinearLayout>


    <TextView
        android:id="@+id/heading1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/cairo_semibold"
        android:text="*This is the cylce booking Application mainly For ISM Students"
        android:textColor="@color/black" />

    <LinearLayout
        android:id="@+id/heading2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/heading1"
        android:layout_margin="10dp"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Booking Requirement"
            android:textAllCaps="true"
            android:fontFamily="@font/cairo_semibold"
            android:textColor="@color/orange" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="1. You should have Internet connection."
            android:fontFamily="@font/cairo_semibold"

            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/cairo_semibold"

            android:text="2. Enter the correct Phone Number as pickup pin will be  messaged on that and if device does not contains the that sim then that pin will be appear on sms only."
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text=""
            android:textColor="@color/black" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/heading2"
        android:layout_margin="5dp"
        android:background="@color/blue" />

    <LinearLayout
        android:id="@+id/cycles_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/heading2"
        android:elevation="5dp"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Cycles in Service:"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:fontFamily="@font/cairo_semibold"

            android:textSize="20sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Geared Cycles :"
                android:textColor="@color/black"
                android:fontFamily="@font/cairo_semibold"

                android:textSize="20sp" />

            <TextView
                android:id="@+id/geared_cycles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="----------"
                android:textColor="@color/red"
                android:fontFamily="@font/cairo_semibold"

                android:textSize="20sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Normal Cycles :"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:fontFamily="@font/cairo_semibold"
                />

            <TextView
                android:id="@+id/normal_cycles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="----------"
                android:fontFamily="@font/cairo_semibold"

                android:textColor="@color/red"
                android:textSize="20sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Cycles     :"
                android:fontFamily="@font/cairo_semibold"

                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/total_cycles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="----------"
                android:fontFamily="@font/cairo_semibold"

                android:textColor="@color/red"
                android:textSize="20sp" />

        </RelativeLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/cycles_details"
        android:layout_margin="5dp"
        android:background="@color/blue" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cycles_details"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Booking Process:"
            android:textAllCaps="true"
            android:textColor="@color/orange"
            android:textSize="20sp"
            android:fontFamily="@font/cairo_semibold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. Register your Addmission Number. "
            android:textColor="@color/black"
            android:textSize="15sp"
            android:fontFamily="@font/cairo_semibold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2. Fill all the correct details."
            android:textColor="@color/black"
            android:textSize="15sp"
            android:fontFamily="@font/cairo_semibold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3. Then fill the reqiured details of booking form."
            android:textColor="@color/black"
            android:textSize="15sp"
            android:fontFamily="@font/cairo_semibold"
            />

    </LinearLayout>


</RelativeLayout>